icon()
	&:before
		position absolute
		top 0
		left 10px
		bottom 0
		margin auto
		display block
		width 16px
		height 16px
		background-image url(../images/wand.png)
		background-repeat no-repeat
		content ''

.jelect-box
	display table
	table-layout fixed
	width 100%

.jelect-col
	display table-cell

.jelect
	position relative
	margin-bottom 20px
	display inline-block
	vertical-align top
	box-sizing border-box
	width 100%
	height 40px
	background #fff
	box-shadow 0 0 0 1px #ccc
	cursor pointer
	user-select none
	box-sizing border-box

	&_state_active
		box-shadow 0 0 0 1px #ccc, 0 2px 4px rgba(0, 0, 0, .25)

	&:focus
	*:focus
		outline none

	&-input
		display none

	&-current
		position relative
		padding-top 8px
		padding-left 38px
		padding-right 38px
		padding-bottom 8px
		overflow hidden
		width 100%
		height 100%
		font-family cuprum
		font-size 18px
		line-height 24px
		overflow-wrap normal
		text-overflow ellipsis
		white-space nowrap
		color #222
		transition background-color .125s
		backface-visibility hidden
		transform translateZ(0)
		will-change background-color

		&:focus
			outline none
			background-color lighten(#08f, 75%)

		icon()

		&:after
			position absolute
			top 0
			right 18px
			bottom 0px
			margin-top auto
			margin-bottom auto
			width 0
			height 0
			content ''
			border-top 5px solid #222
			border-right 5px solid transparent
			border-left 5px solid transparent

	&-options
		position absolute
		top 100%
		left 0
		right 0
		z-index 200
		margin-top 1px
		display none
		overflow hidden
		max-height 194px
		background-color #fff
		box-shadow 0 0 0 1px #ccc,
				   0 2px 4px rgba(0, 0, 0, .25)
		backface-visibility hidden
		transform translateZ(0)
		will-change display

		&_state_active
			display block

	&-scroller
		position relative
		width 100%
		height 100%
		max-height 194px
		overflow-x hidden
		overflow-y scroll
		backface-visibility hidden
		transform translateZ(0)
		will-change width, height

		// Preventing webkit bug of horizontal scrolling
		&::-webkit-scrollbar
			width 0

	&-track
		position absolute
		z-index 3
		top 4px
		right 4px
		bottom 4px
		width 3px
		opacity 0
		background-color #d9d9d9
		pointer-events none
		backface-visibility hidden
		transition-duration .25s
		transition-property opacity
		transform translateZ(0)
		will-change opacity

	&-options_has_scroll &
		&-track
			opacity 1

		&-scrollbar
			cursor pointer

	&-scrollbar
		position absolute
		z-index 1
		right -4px
		width 16px
		pointer-events auto

		&:before
			position absolute
			top 0
			right 4px
			bottom 0
			width 3px
			content ''
			background-color #26282e
			backface-visibility hidden
			transition-duration .25s
			transition-property background-color
			transform translateZ(0)
			will-change background-color

		&:hover:before
			background-color #6c707e

	&-option
		position relative
		margin-bottom 1px
		padding-top 8px
		padding-left 38px
		padding-right 16px
		padding-bottom 8px
		display block
		overflow hidden
		height 38px
		font-family cuprum
		font-size 18px
		line-height 22px
		overflow-wrap normal
		text-overflow ellipsis
		white-space nowrap
		color #222
		box-shadow 0 1px 0 #ccc
		transition .125s ease-out
		backface-visibility hidden
		transform translateZ(0)
		will-change background-color, text-decoration

		&:last-child
			margin-bottom 0
			box-shadow none

		&:focus
		&:hover
		&_state_focused
		&_state_active
			text-decoration underline
			background-color #fff2b3

		icon()
