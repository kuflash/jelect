html
	display table
	width 100%
	height 100%

body
	padding-top 20px
	padding-bottom 20px
	display table-cell
	vertical-align middle
	width 100%
	height 100%
	font-family cuprum, sans-serif
	color #000
	background-color #f0f0f0
	background-image url(../images/chruch.png)
	cursor default

	@media screen and (max-width: 540px)
		padding-top 0
		padding-bottom 0

.main
	margin-left auto
	margin-right auto
	padding 20px
	max-width 540px
	font-size 16px
	border-radius 4px
	background-color #fff
	box-shadow 0 0 8px rgba(0, 0, 0, .5)

	&::selection
		background-color #ffffd0

	@media screen and (max-width: 540px)
		padding-top 40px
		padding-bottom 40px
		border-radius 0
		box-shadow none

.logo
	margin-left auto
	margin-right auto
	margin-bottom 20px
	display block
	width 176px
	height 36px

.h1
	margin-bottom 20px
	font-size 20px
	font-weight bold
	text-align center

.description
	margin-bottom 40px
	font-size 18px
	text-align center

.mark
	padding 0 4px
	font-weight bold
	text-shadow 1px 1px 1px rgba(255, 255, 255, .5)
	border-radius 4px
	background-color #e8e8e8

	&::selection
		background-color rgba(0, 0, 0, .1)
